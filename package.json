{
    "name": "spectrum-vanilla",
    "description": "The Spectrum Colorpicker without jQuery",
    "version": "2.0.9",
    "main": "dist/spectrum.js",
    "license": "MIT",
    "keywords": [
        "color",
        "colorpicker",
        "ui"
    ],
    "scripts": {
        "build:prod": "cross-env NODE_ENV='production' webpack && npm run build:common && npm run build",
        "build:common": "cross-env NODE_ENV='production' LIB_TARGET='commonjs2' webpack",
        "build": "cross-env NODE_ENV='development' webpack && cross-env NODE_ENV='development' LIB_TARGET='commonjs2' webpack",
        "watch": "cross-env NODE_ENV='development' webpack --watch"
    },
    "homepage": "https://github.com/asika32764/spectrum-vanilla",
    "repository": {
        "type": "git",
        "url": "https://github.com/asika32764/spectrum-vanilla"
    },
    "author": {
        "name": "Simon Asika",
        "email": "asika32764@gmail.com"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/plugin-proposal-class-properties": "^7.14.5",
        "@babel/plugin-proposal-optional-chaining": "^7.14.5",
        "@babel/preset-env": "^7.14.5",
        "@types/tinycolor2": "^1.4.3",
        "tinycolor2": "^1.5.2",
        "webpack-cli": "^5.0.1"
    },
    "dependencies": {
        "babel-loader": "^9.1.2",
        "css-loader": "^6.7.3",
        "sass-loader": "^13.2.0",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0"
    }
