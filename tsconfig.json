{
    "compilerOptions": {
      "noImplicitAny": true,
      "outDir": "dist/types",
      "module": "esnext",
      "target": "es6",
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "emitDeclarationOnly": false,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
    },
    "include": ["src/*.ts"],
}
